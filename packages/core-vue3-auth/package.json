{
  "name": "@amilochau/core-vue3-auth",
  "version": "0.8.0-beta.13",
  "description": "Core plugin for vue.js (v3) projects, for authentication",
  "author": "Antoine Milochau",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/amilochau/core-vue3",
    "directory": "package"
  },
  "keywords": [
    "vuejs",
    "plugin"
  ],
  "homepage": "https://github.com/amilochau/core-vue3#readme",
  "bugs": {
    "url": "https://github.com/amilochau/core-vue3/issues"
  },
  "funding": "https://github.com/sponsors/amilochau",
  "company": "Milochau",
  "copyright": "Copyright Â© Milochau",
  "type": "module",
  "module": "./src/index.ts",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore --fix"
  },
  "files": [
    "src/"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./composition": "./src/composition/index.ts",
    "./types": "./src/types/index.ts"
  },
  "dependencies": {
    "@aws-amplify/auth": "^5.6.5"
  },
  "peerDependencies": {
    "@amilochau/core-vue3": "0.8.0-beta.13"
  },
  "devDependencies": {
    "@amilochau/core-vue3": "file:packages/core-vue3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "plugin:vue/vue3-recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
    },
    "rules": {
      "vue/html-closing-bracket-newline": [
        "error",
        {
          "singleline": "never",
          "multiline": "never"
        }
      ]
    }
  }
}
